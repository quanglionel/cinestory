{
  "name": "cinestory",
  "version": "1.0.0",
  "description": "CineStory - Anime & Comic platform",
  "main": "index.html",
  "scripts": {
    "start": "node server/index.js",
    "dev": "npx concurrently \"npm run server\" \"npm run browser\"",
    "server": "npx nodemon server/index.js",
    "browser": "browser-sync start --proxy \"localhost:5000\" --host 0.0.0.0 --port 3000 --files \"index.html, pages/*.html, assets/css/**/*.css, assets/js/**/*.js\" --no-open"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "browser-sync": "^3.0.0",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}